@model BlogPostVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<style>
    textarea {
        width: 100%;
        max-width: 700px;
        height: 200px;
        padding: 10px;
        border: 2px solid #4CAF50;
        border-radius: 10px;
        font-size: 16px;
        font-family: Arial, sans-serif;
        color: #333;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        resize: none;
    }

        textarea:focus {
            border-color: #2ECC71;
            outline: none;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
        }

        textarea::placeholder {
            color: #999;
            font-style: italic;
        }

    input {
        padding: 10px;
        border: 2px solid #4CAF50;
        border-radius: 10px;
        font-size: 16px;
        font-family: Arial, sans-serif;
        color: #333;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        resize: none;
    }

        input:focus {
            border-color: #2ECC71;
            outline: none;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
        }

        input::placeholder {
            color: #999;
            font-style: italic;
        }
</style>

<section class="ftco-section">
	<div class="container">
		<div>
            
            <h1><a href="index.html">NEW BLOG<span>.</span></a></h1>
            <br />
            <br />
            <form asp-controller="BlogPost" asp-action="Create" class="form-group">
                <br />
                <label asp-for="Title">Title</label>
                <br />
                <input type="text" asp-for="Title"  placeholder="Enter Title Max 100 Character" class="form-control" />
                <span asp-validation-for="Title" class="text-danger font-bold"></span>
                <br />
                <label asp-for="Content">Content</label>
                <br />
                <textarea asp-for="Content" placeholder="Enter blog Content"></textarea>
                <br />
                <span asp-validation-for="Content" class="text-danger font-bold"></span>
                <br />
                <label asp-for="AutherName">Auther Name</label>
                <br />
                <input type="text" asp-for="AutherName" placeholder="Enter Auther Name Max 50 Character " class="form-control" />
                <span asp-validation-for="AutherName" class="text-danger font-bold"></span>
                <br />
                <center>
                    <input type="submit" value="Save" class="btn btn-success" />
                    <input type="reset" value="Reset" class="btn btn-warning" />
                    <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</a>
                </center>
            </form>
		</div>
	</div>
</section>

@section JqueryValidation{
    <script src="~/js/jquery-validate/jquery.validate.js"></script>
    <script src="~/js/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/js/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
